{
  "name": "tiffin-marketplace",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "install:backend": "cd packages/backend && npm install",
    "install:frontend": "cd packages/frontend && npm install",
    "add:frontend": "npm install -w packages/frontend",
    "add:backend": "npm install -w packages/backend",
    "setup:env": "bash scripts/setup/setup-env.sh",
    "setup:full": "bash scripts/setup/full-setup.sh",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "run-s build:backend build:frontend",
    "build:backend": "cd packages/backend && npm run build || echo 'Backend has no build step'",
    "build:frontend": "cd packages/frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "start:backend": "cd packages/backend && npm start",
    "start:frontend": "cd packages/frontend && npm run preview",
    "prisma": "cd packages/backend && npm run prisma",
    "prisma:migrate": "cd packages/backend && npx prisma migrate dev",
    "prisma:generate": "cd packages/backend && npx prisma generate",
    "prisma:seed": "cd packages/backend && npx prisma db seed || node src/seed.js",
    "prisma:studio": "cd packages/backend && npx prisma studio",
    "db:setup": "run-s docker:up db:wait db:generate db:migrate db:seed",
    "db:wait": "sleep 3",
    "db:generate": "npm run prisma:generate",
    "db:migrate": "npm run prisma:migrate",
    "db:seed": "npm run prisma:seed",
    "db:init": "bash scripts/db/init-db.sh",
    "db:reset": "bash scripts/db/reset-db.sh",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:restart": "run-s docker:down docker:up",
    "docker:build": "docker-compose build",
    "docker:up:prod": "docker-compose up -d",
    "docker:down:prod": "docker-compose down",
    "docker:logs:prod": "docker-compose logs -f",
    "clean": "bash scripts/utils/clean.sh",
    "check:deps": "bash scripts/utils/check-deps.sh",
    "kill:ports": "run-p kill:backend kill:frontend",
    "kill:backend": "lsof -ti:4000 | xargs kill -9 2>/dev/null || echo 'No process on port 4000'",
    "kill:frontend": "lsof -ti:5173 | xargs kill -9 2>/dev/null || echo 'No process on port 5173'",
    "lint": "run-p lint:backend lint:frontend",
    "lint:backend": "cd packages/backend && echo 'Backend linting not configured'",
    "lint:frontend": "cd packages/frontend && echo 'Frontend linting not configured'"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "npm-run-all": "^4.1.5"
  }
}
